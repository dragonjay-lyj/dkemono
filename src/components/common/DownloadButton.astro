---
const { url, label = "下载", ariaLabel = "下载文件", size = "default" } = Astro.props;

// 根据 size 属性调整按钮尺寸
const sizeClasses = size === "small" 
  ? "px-3 py-1.5 text-sm" 
  : size === "large" 
    ? "px-6 py-3 text-lg" 
    : "px-4 py-2 text-base";
const iconSize = size === "small" ? 16 : size === "large" ? 24 : 20;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class={`inline-flex items-center ${sizeClasses} bg-blue-600 text-white rounded-lg shadow-md hover:bg-blue-700 hover:shadow-xl transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transform hover:-translate-y-0.5 active:translate-y-0.5 active:shadow-md group`}
  aria-label={ariaLabel}
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width={iconSize}
    height={iconSize}
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2.5"
    stroke-linecap="round"
    stroke-linejoin="round"
    aria-hidden="true"
    class="mr-2 transition-transform duration-300 group-hover:translate-y-1"
  >
    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
    <polyline points="7 10 12 15 17 10" />
    <line x1="12" y1="15" x2="12" y2="3" />
  </svg>
  <span class="font-medium tracking-tight transition-colors duration-300 group-hover:text-blue-100">{label}</span>
</a>